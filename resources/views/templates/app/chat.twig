{% if option.ollama.models is defined %}
	{% set models = [] %}
	{% for model in option.ollama.models %}
		{% set fileTypes = [] %}

		{% if model.tools %}
			{% set fileTypes = fileTypes|merge(types) %}
		{% endif %}
		{% if model.vision %}
			{% set fileTypes = fileTypes|merge(img_types) %}
		{% endif %}

		{% set models = models|merge([{
      model: model.key,
      name: model.provider ? model.provider ~ ' / ' ~ model.name : model.name,
      short_name: model.name,
      supports_image: model.vision == 1,
      supports_calls: model.tools == 1,
      file_types: fileTypes,
      is_enabled: workspace.subscription.plan.config.models[model.key] ?? false,
      is_available: option.features.chat.models is not defined or model.key in option.features.chat.models
    }]) %}
	{% endfor %}

	{% set adapters = adapters|merge([
    {
      is_available: true,
      models: models
    }
  ]) %}
{% endif %}

{% for llm in option.llms ?? [] %}
	{% set models = [] %}
	{% for model in llm.models %}
		{% set fileTypes = [] %}

		{% if model.tools %}
			{% set fileTypes = fileTypes|merge(types) %}
		{% endif %}
		{% if model.vision %}
